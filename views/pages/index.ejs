<html>
<head>
		<META http-equiv="refresh" content="2016/">
		<meta http-equiv="cache-control" content="max-age=0" />
		<meta http-equiv="cache-control" content="no-cache" />
		<meta http-equiv="expires" content="0" />
		<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
		<meta http-equiv="pragma" content="no-cache" />
		<style>
			a {
				color: darkblue;
				text-decoration: none;
			}

			.year {
				font-size: 32px;
			}
			.years {
				color: gray;
				font-weight: bolder;
			}
			.trackDetails {
				font-size: larger;
				font-weight: bold;
				padding-top: 20px;
				width: 400px;
			}
			.trackComments {
				font-size: larger;
				font-style: italic;
			}
		</style>
</head>
<body>
	<div class="year">
	<% if (results.playlist_id) { %>
	Listen on to <%= results.year %> on <a href="https://open.spotify.com/playlist/<%=results.playlist_id %>"><img src="/images/spotify.png" /></a>
	<% } else { %>
		<%= results.year %>
	<% } %>
	</div>

	<div class="years">
		<a href="/years">All Years</a>
	</div>

    <% results.tracks.forEach(function(r, index) { %>
		<div class="trackDetails">
			<%= (index+1) %>. <br>
			"<%= r.title %>" <br>
			by <%= r.artist %> <br>
			<% if (r.album) { %>
				<% if (!r.is_single) { %> from the album '<%= r.album %>' <% } else { %> Released as a single on %><%=r.release_date%> <% }%>
			<% } %>
		</div>
		<% if (r.images && r.images.length > 0) { %> 
			<div class="trackImage"><img src="<%= r.images.find(i => i.width > 300).url %>" width="400px"/></div>
		<% } %>
		<div class="trackComments"><%= r.comments %></div>
	<% }); %>

	<div class="years">
		<a href="/years">All Years</a>
	</div>

<body>
</html>